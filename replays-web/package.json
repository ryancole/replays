{
  "name": "replays-web",
  "version": "0.0.1",
  "author": "Ryan Cole",
  "description": "A place to store your League of Legends replay files.",
  "main": "index.js",
  "dependencies": {
    "bootstrap": "^3.3.4",
    "flux": "^2.0.1",
    "react": "^0.13.1",
    "react-router": "^0.13.2"
  },
  "devDependencies": {
    "browserify": "^9.0.8",
    "clean-css": "^3.1.9",
    "envify": "^3.4.0",
    "nodemon": "^1.3.7",
    "reactify": "^1.1.0",
    "rework-npm": "^1.0.0",
    "rework-npm-cli": "^0.1.1",
    "watchify": "^3.1.1"
  },
  "scripts": {
    "build-js": "browserify src/app.jsx | uglifyjs > build/app.js",
    "build-css": "rework-npm index.css | cleancss -o build/app.css",
    "watch-js": "watchify src/app.jsx -o build/app.js --debug --verbose",
    "watch-css": "nodemon -e css --ignore build/app.css --exec 'rework-npm index.css -o build/app.css'"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  }
}
